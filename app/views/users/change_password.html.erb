<% if @user.errors.any? %>
     <% @user.errors.full_messages.each do |msg|%>
            <div class="alert alert-danger alert-dismissible fade show mx-3" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                <%= msg%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    <% end%>
<% end %>

<%= form_with(url: update_password_path(current_user.id), method: "patch") do |form|%>
    <div class="form-group mx-3 mt-3">
        <%= form.label :current_password%>
        <br>
        <%= form.password_field :current_password, class: "form-control"%>
    </div>
    <div class="form-group mx-3 mt-3">
        <%= form.label :new_password%>
        <br>
        <%= form.password_field :new_password, class: "form-control"%>
    </div>
    <div class="form-group mx-3 mt-3">
        <%= form.label :new_password_confirm%>
        <br>
        <%= form.password_field :new_password_confirm, class: "form-control" %>
    </div>
    <%= form.submit "Update password", class: "btn btn-outline-primary mx-3 mt-3"%>
<% end %>