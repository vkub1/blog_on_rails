<%= form_with(model: @post) do |form|%>
    <div class="form-group mx-3 mt-3">
        <%= form.label :title%>
        <br>
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group mx-3 mt-3">
        <%= form.label :body%>
        <br>
        <%= form.text_area :body, class: "form-control" %>
    </div>
    <%= form.submit  class: "btn btn-outline-primary mx-3 mt-3"%>
<% end %>