<div class="mt-4 d-flex mb-5 flex-wrap"> 
<% @posts.each do |post| %>
        <div class="col-md-4 col-sm-6 col-12 mt-5">
            <div class="card mx-3">
                <h2 class="card-title"><%= link_to(post.title, post_path(post.id)) %></h2>
                <div class="card-body d-flex justify-content-between text-center">
                    <h5 class="card-text"><%= post.body[0..50]..%></h5>
                </div>
            </div>
        </div>  
<% end %>
</div>