<div class="container mx-3">
    <h1 class="mt-3"><%= @post.title%></h1>
    <p class="mt-3 font-weight-bold"><%= @post.body%><p>
    <p class="mt-3">Posted <%= time_ago_in_words(@post.created_at)%> ago</p>
    <div class="mt-3">
        <%= link_to('Edit', edit_post_path, class:"btn btn-outline-primary") %>
        <%= link_to('Delete', post_path, method: :delete, data:{confirm:"Are you sure?"}, class: "btn btn-outline-primary") %>
    <div>
</div>

